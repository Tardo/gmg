{% extends "minimal_layout.html.j2" %}
{% set navbar = True %}
{% block title %}{{ _('Reports') }}{% endblock %}
{% block content %}
{{ super() }}

<div class="flex flex-col h-100 items-center pb-4">

	<div class="bg-white dark:bg-slate-600 shadow overflow-hidden w-full max-w-7xl mt-9 grow-0 hover:drop-shadow-xl">
		<div class="px-4 py-5 sm:px-6 bg-gray-200 dark:bg-slate-800">
			<h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-200">
				{{ _('General') }}
			</h3>
		</div>
		<div class="border-t border-gray-200 dark:border-gray-900 dark:text-gray-100 p-4">
			<p>{{ _('Users tracked: {}').format(general_total_users) }}</p>
			<p>{{ _('Threads tracked: {}').format(general_total_threads) }}</p>
			<p>{{ _('Posts tracked: {}').format(general_total_posts) }}</p>
			<p>{{ _('Multimedias tracked: {}').format(general_total_medias) }}</p>
		</div>
	</div>

	{% include "includes/web_events.html.j2" %}

	<div class="bg-white dark:bg-slate-600 shadow overflow-hidden w-full max-w-7xl grow-0 hover:drop-shadow-xl">
		<div class="px-4 py-5 sm:px-6 bg-gray-200 dark:bg-slate-800">
			<h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-gray-200">
				{{ _('Last week report') }}
			</h3>
		</div>
		<div class="border-t border-gray-200 dark:border-gray-900">
		</div>
	</div>

</div>
{% endblock %}
